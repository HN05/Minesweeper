<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="minesweeper.MinesweeperController" spacing="10" alignment="CENTER">
	<children>
		<HBox alignment="CENTER" spacing="10">
			<padding>
				<Insets top="10" />
			</padding>
			<children>
				<Label fx:id="bombCounter" />
				<Button fx:id="modeSwitch" onAction="#handleToggleFlagMode" />
			</children>
		</HBox>
		<HBox alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
			<padding>
				<Insets left="40" right="40" bottom="40" top="20" />
			</padding>
			<children>
				<GridPane fx:id="grid" HBox.hgrow="ALWAYS" alignment="CENTER" />
			</children>
		</HBox>
	</children>
</VBox>
